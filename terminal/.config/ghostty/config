clipboard-read = allow
clipboard-write = allow

auto-update = off

keybind = clear

# Windows
keybind = ctrl+shift+n=new_window

# Tabs
keybind = ctrl+shift+t=new_tab
keybind = ctrl+one=goto_tab:1
keybind = ctrl+two=goto_tab:2
keybind = ctrl+three=goto_tab:3
keybind = ctrl+four=goto_tab:4
keybind = ctrl+five=goto_tab:5
keybind = ctrl+six=goto_tab:6
keybind = ctrl+seven=goto_tab:7
keybind = ctrl+eight=goto_tab:8
keybind = ctrl+nine=goto_tab:9
keybind = ctrl+shift+left_bracket=previous_tab
keybind = ctrl+shift+right_bracket=next_tab
keybind = ctrl+shift+alt+left_bracket=move_tab:-1
keybind = ctrl+shift+alt+right_bracket=move_tab:1

# Splits
keybind = ctrl+shift+s=new_split:right
keybind = ctrl+shift+d=new_split:down
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+j=goto_split:bottom
keybind = ctrl+shift+k=goto_split:top
keybind = ctrl+shift+l=goto_split:right
keybind = ctrl+shift+z=toggle_split_zoom
keybind = ctrl+shift+alt+h=resize_split:left,10
keybind = ctrl+shift+alt+j=resize_split:down,10
keybind = ctrl+shift+alt+k=resize_split:up,10
keybind = ctrl+shift+alt+l=resize_split:right,10
keybind = ctrl+shift+alt+plus=equalize_splits

# Other
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+a=select_all
keybind = ctrl+shift+i=inspector:toggle
keybind = ctrl+shift+p=toggle_command_palette

# Global
keybind = global:ctrl+backquote=toggle_quick_terminal
